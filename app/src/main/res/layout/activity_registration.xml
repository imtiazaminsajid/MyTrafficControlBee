<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFCDB"
    tools:context=".RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#575247"
        android:weightSum="6"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/menuRegistration"
            android:layout_width="0dp"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:src="@drawable/ic_menu_black_24dp"
            android:layout_gravity="center"
            android:clickable="true"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_weight="4"
            android:src="@drawable/traffic_logo"
            android:gravity="center_horizontal"
            />




    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register as a Contributor"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:fontFamily="serif"
        android:textColor="#000"
        android:layout_marginTop="15sp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="22sp"
            android:fontFamily="serif"
            android:textColor="#000"
            android:layout_gravity="center"

            />

        <EditText
            android:id="@+id/registrationName"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="Your Name"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#D3F591"
            android:layout_marginLeft="43dp"

            />




    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="22sp"
            android:fontFamily="serif"
            android:textColor="#000"
            android:layout_gravity="center"

            />

        <EditText
            android:id="@+id/registrationEmailId"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="abcdef@gmail.com"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#D3F591"
            android:layout_marginLeft="43dp"
            android:inputType="textEmailAddress"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password: "
            android:textSize="22sp"
            android:fontFamily="serif"
            android:textColor="#000"
            android:layout_gravity="center"

            />

        <EditText
            android:id="@+id/registrationPassword"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="password"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#D3F591"
            android:layout_marginLeft="5dp"
            android:inputType="numberPassword"
            />




    </LinearLayout>

    <Button
        android:id="@+id/registrationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Submit"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="18dp"
        android:padding="5dp"
        android:textColor="#000000"
        android:background="#D3F591"
        android:fontFamily="serif"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an Account? Please "
            android:textSize="15sp"
            android:fontFamily="serif"
            android:textColor="#000"
            android:layout_gravity="center"

            />

        <TextView
            android:id="@+id/registrationHaveAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SignIn!"
            android:textSize="17sp"
            android:fontFamily="serif"
            android:textColor="#0034d1"
            android:layout_gravity="center"

            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area Based Traffic Notification"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_weight="6"
            android:fontFamily="serif"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All"
            android:textSize="19sp"
            android:layout_weight="1"
            android:textColor="#0afc06"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <GridView
            android:id="@+id/gridViewFroRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="3"
            >


        </GridView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Alert: 200"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_weight="2"
            android:fontFamily="serif"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NearBy Map"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:layout_gravity="center"
            android:gravity="center"
            />



    </LinearLayout>

    <ProgressBar
        android:id="@+id/registrationProgressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>