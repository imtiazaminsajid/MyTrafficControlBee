<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sampleLocation"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Gulshan"
            android:textColor="#b62802"
            android:textSize="20sp"
            android:textStyle="italic"

            />

        <TextView
            android:id="@+id/sampleDateTime"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="12:30PM"
            android:textStyle="italic"
            android:textColor="#1b3bca"
            android:textSize="16sp"
            android:gravity="center"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/sampleAlertText"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#e4e9fa"
        android:text="Abcdefjgalkjlkgaklshjdkfghajkshaskjdfgkjahkjfghaksdf"
        />

    <ImageView
        android:id="@+id/sampleImageView"
        android:src="@drawable/ic_image_black_24dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"/>

    </LinearLayout>





</LinearLayout>