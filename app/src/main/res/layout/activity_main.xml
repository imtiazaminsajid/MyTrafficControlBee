<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFCDB"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#575247"
        android:weightSum="6"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:src="@drawable/ic_menu_black_24dp"
            android:layout_gravity="center"
            android:clickable="true"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_weight="4"
            android:src="@drawable/traffic_logo"
            android:gravity="center_horizontal"
            />

        <ImageView
            android:id="@+id/postAlertButton"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/person"
            android:layout_gravity="center"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latest Traffic Notification"
            android:textSize="22sp"
            android:textColor="#000"
            android:layout_weight="6"
            android:fontFamily="serif"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All"
            android:textSize="19sp"
            android:layout_weight="1"
            android:textColor="#0afc06"
            />




    </LinearLayout>


    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:layout_gravity="center"

        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </android.support.v7.widget.RecyclerView>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area Based Traffic Notification"
            android:textSize="21sp"
            android:textColor="#000"
            android:layout_weight="6"
            android:fontFamily="serif"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All"
            android:textSize="19sp"
            android:layout_weight="1"
            android:textColor="#0afc06"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <GridView
            android:id="@+id/gridViewForHomeActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="4"
            >


        </GridView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <TextView
            android:id="@+id/totalPostCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Alert: 00"
            android:textSize="21sp"
            android:textColor="#000"
            android:layout_weight="2"
            android:fontFamily="serif"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/seeTraffic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="NearBy Map"
            android:textColor="#000"
            android:textSize="20sp" />



    </LinearLayout>




</LinearLayout>